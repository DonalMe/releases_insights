{% extends 'base.html.twig' %}

{% block header %}
  <h1 class="text-center">Current Firefox trains</h1>
{% endblock %}

{% block main %}
<div class="container  h-100">
  <div class="row text-center align-items-center">
    <div class="col-sm">
      <div><img src="/assets/img/firefox-logo.svg"></div>
      <h2>{{ constant('FIREFOX_RELEASE')|number_format }}</h2>
      <h3><a href="/release/?version=release" data-toggle="tooltip" data-placement="top" data-html="true" title="Click this link to get past data about the version currently shipped to users on the <b>release</b> channel.">Release</a></h3>
    </div>
    <div class="col-sm">
      <div><img src="/assets/img/firefox-logo-beta.svg"></div>
      <h2>{{ constant('FIREFOX_BETA')|number_format }}</h2>
      <h3><a href="/release/?version=beta" data-toggle="tooltip" data-placement="top" data-html="true" title="Click this link to get detailed data about the <b>Beta</b> cycle.">Beta</a></h3>
    </div>
    <div class="col-sm">
      <div><img src="/assets/img/firefox-logo-nightly.svg"></div>
      <h2>{{ constant('FIREFOX_NIGHTLY')|number_format }}</h2>
      <h3><a href="/release/?version=nightly" data-toggle="tooltip" data-placement="top" data-html="true" title="Click this link to get information about the <b>Nightly</b> cycle.">Nightly</a></h3>
    </div>
  </div>
</div>


  {% if release_day %}
  <h3 class="text-center">
    <b class="alert alert-info text-dark" role="alert">Firefox {{ shipping_release }} is shipping today!</b>
  </h3>
  {% else %}
    <h3 class="text-center">Next merge day: {{ cycle_dates.merge_day|format_date(pattern='MMMM d', locale='en') }}</h3>
    <h3 class="text-center">Firefox {{ constant('FIREFOX_BETA')|number_format }} ships on {{ cycle_dates.beta_1|format_date(pattern='MMMM d', locale='en') }}
    (in
    {% set difference = date(cycle_dates.beta_1).diff(date()) %}
    {% set leftDays = difference.days %}
    {% if leftDays == 1 %}
      1 day
    {% else %}
      {{ leftDays }} days
    {% endif %}
    {{ date(cycle_dates.release).diff(date()).days }})
    </h3>
  {% endif %}

{% endblock %}

{% block footer %}
  <footer></footer>
  <script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
  </script>
{% endblock %}

